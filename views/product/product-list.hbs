<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Danh Sách Sản Phẩm</h4>
                    <div class="add-product">
                        <a href="product-add">Thêm Sản Phẩm</a>
                    </div>
                    <table>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên SP</th>
                            <th>Thể loại</th>
                            <th>Giới tính</th>
                            <th>Giá góc</th>
                            <th>Giá giảm</th>
                            <th>Số lượng</th>
                            <th>Nhóm SP</th>
                            <th>Mô tả</th>
                            <th></th>
                        </tr>
                        {{#each product_list}}
                        <tr>
                            <td><img src="{{this.Image}}" alt="" /></td>
                            <td>{{this.Name}}</td>
                            <td>{{this.Category}}</td>
                            <td>{{this.Gender}}</td>
                            <td>${{this.Cost}}</td>
                            <td>${{this.Discount}}</td>
                            <td>{{this.Amount}}</td>
                            <td>{{this.Product_Group}}</td>
                            <td>{{this.Describe}}</td>
                            <td>
                                <a href="product-edit-{{this._id}}"><button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
                                <form action="/delete-product-{{this._id}}" method="POST">
                                    <button type="submit" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                    <div class="custom-pagination">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>