<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Products List</h4>
                    <div class="add-product">
                        <a href="manufacturer-create">Thêm nhà cung ứng</a>
                    </div>
                    <table>
                        <tr>
                            <th>Tên nhà sản xuất</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Mô tả</th>
                            <th>Xoá sửa</th>
                        </tr>
                        {{#each listManufacturer}}
                        <tr>
                            <td>{{this.Name}}</td>
                            <td>{{this.Address}}</td>
                            <td>{{this.PhoneNumber}}</td>
                            <td>{{this.Description}}</td>
                            <td>
                                <form action="/manufacturer-edit-{{this._id}}" method="GET"><button data-toggle="tooltip" title="Edit" class="pd-setting-ed" type="submit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></form>
                                <form action="/manufacturer-trash-{{this._id}}" method="POST"><button data-toggle="tooltip" title="Trash" class="pd-setting-ed" type="submit"><i class="fa fa-trash-o" aria-hidden="true"></i></button></form>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                    <div class="custom-pagination">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
